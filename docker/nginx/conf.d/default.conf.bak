# Please do not directly edit this file. Instead, modify the .env variables related to NGINX configuration.

# HTTP server
server {
    listen 80;
    server_name flexable-studio.mind-verse.de;

    # Redirect all HTTP requests to HTTPS if HTTPS is enabled
    location / {
        return 301 https://$host$request_uri;
    }

    # ACME Challenge Location for SSL certification
    location /.well-known/acme-challenge/ { 
        root /var/www/html; 
        try_files $uri =404; 
    }

    location /console/api {
      proxy_pass http://api:5001;
      include proxy.conf;
    }

    location /api {
      proxy_pass http://api:5001;
      include proxy.conf;
    }

    location /v1 {
      proxy_pass http://api:5001;
      include proxy.conf;
    }

    location /files {
      proxy_pass http://api:5001;
      include proxy.conf;
    }

    location /explore {
      proxy_pass http://web:3000;
      include proxy.conf;
    }

    location /e/ {
      proxy_pass http://plugin_daemon:5002;
      proxy_set_header Dify-Hook-Url $scheme://$host$request_uri;
      include proxy.conf;
    }

    location / {
      proxy_pass http://web:3000;
      include proxy.conf;
    }
}

# HTTPS server
server {
    listen 443 ssl;
    server_name flexable-studio.mind-verse.de;

    ssl_certificate /etc/letsencrypt/live/flexable-studio.mind-verse.de/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/flexable-studio.mind-verse.de/privkey.pem;
    ssl_protocols TLSv1.1 TLSv1.2 TLSv1.3;

    location /console/api {
      proxy_pass http://api:5001;
      include proxy.conf;
    }

    location /api {
      proxy_pass http://api:5001;
      include proxy.conf;
    }

    location /v1 {
      proxy_pass http://api:5001;
      include proxy.conf;
    }

    location /files {
      proxy_pass http://api:5001;
      include proxy.conf;
    }

    location /explore {
      proxy_pass http://web:3000;
      include proxy.conf;
    }

    location /e/ {
      proxy_pass http://plugin_daemon:5002;
      proxy_set_header Dify-Hook-Url $scheme://$host$request_uri;
      include proxy.conf;
    }

    location / {
      proxy_pass http://web:3000;
      include proxy.conf;
    }
}

